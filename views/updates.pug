doctype html
html
  head
    title= `${title}`
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="/css/style.css")
  body

  div(class="container")
    h1 🐾 Create Lovely Pets  🐾
    

      div(class="error")
        p= error

    form(action="/update-cobj" method="POST")
      div
        label(for="pet_name") Pet Name
        input(type="text" id="pet_name" name="pet_name" required)
      div
        label(for="pet-food") Pet Food
        input(type="text" id="pet_food" name="pet_food" required)
      div
        label(for="pet-type") Pet Type
        input(type="text" id="pet_type" name="pet_type" required)
      div
        input(type="submit" value="Create" class="button")

    a(href="/" class="link") Return to the homepage